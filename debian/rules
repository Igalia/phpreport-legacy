#!/usr/bin/make -f

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

PKG=phpreport
deb_dir=debian/$(PKG)
www_dir=usr/share/$(PKG)
doc_dir=usr/share/doc/$(PKG)

CFLAGS = -Wall -g

ifneq (,$(findstring noopt,$(DEB_BUILD_OPTIONS)))
	CFLAGS += -O0
else
	CFLAGS += -O2
endif

configure: configure-stamp
configure-stamp:
	dh_testdir
# Add here commands to configure the package.

	touch configure-stamp

build: build-stamp

build-stamp: configure-stamp 
	dh_testdir

# Add here commands to compile the package.
#$(MAKE)
#docbook-to-man debian/phpreport.sgml > phpreport.1

	touch $@

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp configure-stamp

# Add here commands to clean up after the build process.
#-$(MAKE) clean

	dh_clean 

install: build
	dh_testdir
	dh_testroot
	dh_clean -k 
	dh_installdirs

# Add here commands to install the package into debian/phpreport.
#$(MAKE) DESTDIR=$(CURDIR)/debian/phpreport install


# Build architecture-independent files here.
binary-indep: build install
# We have nothing to do by default.

# Build architecture-dependent files here.
binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installchangelogs 
	dh_installdocs
	dh_install
	dh_installdebconf	
#	dh_installinfo
#	dh_installman
#	dh_installexamples
#	dh_link
#	dh_strip
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_gencontrol
	dh_md5sums

	rm -rf $(deb_dir)/$(doc_dir)/sql/CVS/
	rm -rf $(deb_dir)/$(www_dir)/css/CVS/
	rm -rf $(deb_dir)/$(www_dir)/images/CVS/
	rm -rf $(deb_dir)/$(www_dir)/include/CVS/
	rm -rf $(deb_dir)/$(www_dir)/i18n/CVS/
	rm -rf $(deb_dir)/$(www_dir)/share/CVS/

	dh_builddeb

	rm -rf $(deb_dir)

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
